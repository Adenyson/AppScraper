{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install --no-cache-dir -r requirements.txt"
    },
    "deploy": {
        "startCommand": "gunicorn wsgi:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
} 